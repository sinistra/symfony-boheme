{# src/Nms/AdminBundle/Resources/views/Group/new.html.twig #}
{% extends 'NmsAdminBundle::layout.html.twig' %}
{% set page_title = 'Group add' %}

{% block title %}
{{ parent() }} {{page_title}}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block pagetitle %} {{page_title}} <small>add a user role</small>{% endblock %}
{% block breadcrumb %}
    <li>
        <a href="{{ path('group_list') }}">Groups</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        <a href="{{ path('group_new') }}">Add</a>
    </li>
{% endblock %}

{% block body -%}
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption"><i class="icon-group"></i>{{page_title}}</div>
        <div class="actions">
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="{{ path('group_create') }}" class="form-horizontal"  method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
            <input type="hidden" name="_method" value="PUT" />
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        {{ form_label(form.name, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                        <div class="controls">
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name, {'attr':{'class':'span8'} }) }}
                        </div>
                    </div>
                </div>
                <!--/span-->
            </div>
            <!--/row-->
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="control-group">
                        {{ form_label(form.role, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                        <div class="controls">
                            {{ form_errors(form.role) }}
                            {{ form_widget(form.role, {'attr':{'class':'span8'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                    {{ form_label(form.users, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                        <div class="controls">
                            {{ form_errors(form.users) }}
                            {{ form_widget(form.users, {'attr':{'class':'span8'} }) }}
                        </div>
                    </div>
                </div>
                <!--/span-->
            </div>
            <!--/row-->
            {{ form_rest(form) }}
            <div class="form-actions">
                <button type="submit" class="btn blue" ><i class="icon-ok"></i> Create</button>
                <a href="{{ path('group_list') }}" class="btn black" >Back</a>
            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>
{% endblock %}
