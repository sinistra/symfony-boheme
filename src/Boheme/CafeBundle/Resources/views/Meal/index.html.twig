{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Meal list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Publish</th>
                <th>Expire</th>
                <th>Price</th>
                <th>Created</th>
                <th>Createdby</th>
                <th>Updated</th>
                <th>Updatedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('meal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{% if entity.publish %}{{ entity.publish|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.expire %}{{ entity.expire|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.price }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createdby }}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.updatedby }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('meal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('meal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('meal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
