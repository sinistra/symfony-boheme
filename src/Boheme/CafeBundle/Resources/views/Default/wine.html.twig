{# src/Boheme/CafeBundle/Resources/views/Default/wine.html.twig #}
{% extends 'NmsAdminBundle::layout.html.twig' %}

{% set page_title = 'Wine' %}

{% block title %}
{{ parent() }} {{ page_title }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block jqueryinit %}
{% endblock %}

{% block pagetitle %}{% endblock %}

{% block breadcrumb %}{% endblock %}

{% block body -%}

{% set prevvariety=''%}
{% set prevgroup=''%}

<!--=== Content Part ===-->
<div class="container">
    <div class="row margin-bottom-30">

        <div class="col-md-4">
            <!-- Contacts -->
            <img src="{{asset('image/wine.png')}}" alt="" />

        </div><!--/col-md-3-->
        <div class="col-md-8 mb-margin-bottom-30">
            <div class="headline"><h2>{{ page_title }}</h2></div>

            <table class="table">
                <thead>
                    <tr>
                    {# sorting of properties based on query components #}
                        <th>Description</th>
                        <th>Glass</th>
                        <th>carafe</th>
                        <th>Bottle</th>
                    </tr>
                </thead>

                <tbody>
                    {% for wine in pagination %}
                    {% if wine.variety.title != prevvariety %}
                    <tr><td><h4>{{meal.sitting.title}}</h4></td></tr>
                        {% set prevsitting = meal.sitting.title %}
                    {% endif %}
                    {% if meal.menugroup.title != prevgroup %}
                    <tr><td><b>{{meal.menugroup.title}}</b></td></tr>
                        {% set prevgroup = meal.menugroup.title %}
                    {% endif %}
                    <tr>
                        <td>{{ meal.title }} {{ meal.content }}</td>
                        <td class="text-right">{% if meal.price > 0 %}{{ meal.price }} {% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>

        </div><!--/col-md-9-->

    </div><!--/row-->

</div><!--/container-->
<!--=== End Content Part ===-->
{% endblock %}
